//
// Cover
//

h1.book-title
  font-size: 3em
  font-weight: 800
  margin: 0 0 1em 0
  color: #222
  position relative
  @media (max-width 430px)
    font-size 2em
    margin-left .5em
    margin-right .5em
  &:before
    content ''
    position absolute
    bottom -15px
    left -6px
    width 15px
    height 15px
    border-radius 50%
    background-color #222
  &:after
    content ''
    position absolute
    bottom -15px
    right -6px
    width 15px
    height 15px
    border-radius 50%
    background-color #222
