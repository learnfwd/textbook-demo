//
// Text flow
//

.no-strech
  width: auto

.percent-30
  max-width: 30%

.percent-50
  max-width: 50%

.center
  margin: 0 auto

.margin-for-right
  margin: 0 0 1em 1em

.bordered
  img
    border-radius: 0.4em


//
// General
//

@media (min-width: 992px)
  body #textbook {
    width: 990px;
  }

@media (min-width: 900px)
  #scrollview
    background: url('../img/bg/6.png');
    background-color: #ddd;

    padding: 1em 0;

      #textbook
        background-color: white
        padding: 0 3em;


#scrollview #textbook
  padding: 0 3em 3em 3em

article
  section
    p
      text-align: justify

    h1
      color: #F09200
      font-family: "Futura"
      text-transform: uppercase
      border-bottom: 5px solid
      margin-bottom: 0.8em

    h2
      color: #68A700
      font-family: "Futura"
      margin: 0.5em 0

    .aside-box
      background-color: #F8DDB3
      border-radius: 0.5em
      padding: 1.1em
      margin: 0 1em

      quote
        font-style: oblique
        font-size: 130%



//
// Cover
//

h1.book-title
  font-size: 3em
  font-weight: 800
  margin: 0 0 1em 0
  color: #222

.name-label
