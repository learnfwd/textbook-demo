#rightbar-toggle
  background-color: transparent;

.avatar-mood-neutral
.avatar-mood-happy
.avatar-mood-sad
.avatar-mood-smart
.avatar-mood-smile
.avatar-mood-angry
.avatar-mood-cheeky
.avatar-mood-helpless
.avatar-mood-sleeping
.avatar-mood-uneasy
.avatar-mood-wink
.avatar-mood-wondering
.avatar-mood-bored
.avatar-mood-upset
.avatar-mood-unimpressed
  transition: all 0.3s ease
  background-color: transparent;
  background-size: contain;
  background-repeat: no-repeat;

.avatar-mood-neutral
  background-image: url('../img/avatar/kat-neutral.png');

.avatar-mood-happy
  background-image: url('../img/avatar/kat-happy.png');
  transform: translate(0px, -10px);

.avatar-mood-sad
  background-image: url('../img/avatar/kat-sad.png');
  transform: translate(0px, 10px);

.avatar-mood-smart
  background-image: url('../img/avatar/kat-smart.png');
  transform: scale(1.2) translate(5px, 0px);

.avatar-mood-smile
  background-image: url('../img/avatar/kat-smile.png');

.avatar-mood-angry
  background-image: url('../img/avatar/kat-angry.png');
  transform: translate(-20px, 20px) scale(1.4)

.avatar-mood-cheeky
  //background-image: url('../img/avatar/kat-cheeky.png');
  background-image: url('../img/avatar/kat-happy.png');

.avatar-mood-helpless
  background-image: url('../img/avatar/kat-helpless.png');

.avatar-mood-uneasy
  background-image: url('../img/avatar/kat-uneasy.gif');

.avatar-mood-wink
  background-image: url('../img/avatar/kat-wink.png');
  transform: rotate(5deg);

.avatar-mood-wondering
  background-image: url('../img/avatar/kat-wondering.gif');

.avatar-mood-bored
  background-image: url('../img/avatar/kat-bored.png');

.avatar-mood-upset
  background-image: url('../img/avatar/kat-upset.png');
  transform: translate(-6px, -6px) scale(1.1);

.avatar-mood-sleeping
  background-image: url('../img/avatar/kat-sleeping.gif');
  transform: scale(0.8);
  transition: all 0.5s ease

.avatar-mood-unimpressed
  background-image: url('../img/avatar/kat-unimpressed.png');


